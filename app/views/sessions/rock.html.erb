<h1>ROCK N ROLL</h1>
<div class="ui container">
   <ul class="genre-list">
    <% @sessions.each do |s| %>
      <div class="genre-list-item" >
        <div class="">
          <%= react_component("SessionListItem", { session: s }) %>
        </div>
        <% if user_signed_in? %>
          <%= link_to toggle_favorite_session_path(s), remote: true, method: :post do %>
            <div class="like-icon " data-id="<%= s.id %>">
              <%= render 'like_button' %>
            </div>
          <% end %>
        <% else %>
          <%= link_to new_user_session_path do %>
              <div class="like-icon ">
                <div class="like-icon ">
                  <i class="fas fa-heart" title="Sign in to like" ></i>
                </div>

              </div>
            <% end %>
          <% end %>
      </div>
    <%end%>
  </ul>
</div>



